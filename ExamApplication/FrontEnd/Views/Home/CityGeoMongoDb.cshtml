@model IEnumerable<DataClasses.Book>

@{
    ViewData["Title"] = "CityGeoMongoDB";
}

<h2>CityGeoMongoDB</h2>

@using (Html.BeginForm())
{
    <label>City latitude</label>
    <input type="text" name="cityLatitude" />
    <label>City longitude</label>
    <input type="text" name="cityLongitude" />
    <input type="submit" value="Search" />
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
            </tr>
        }
    </tbody>
</table>
